{
  "files": [],
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "composite": true,
    "baseUrl": ".", // This ensures TypeScript looks at the root for paths
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "rootDir": ".",
    "types": ["cypress","node"]
  },
  "include": [
    "cypress/**/*.ts",
    "cypress.config.ts",
    "cypress/support/**/*.ts"
  ],
  "references": [{ "path": "./apps/backend" }]
}
